# rofi launchers
super + space
   	rofi -modi drun -show drun -line padding 4 -hide-scrollbar -show-icons
# rofi network manager (will not work unless on wifi)	
super + n
	bash ~/bin/rofi-network-manager
# logout, shutdown, reboot
super + x
	~/bin/power
# help with shortcuts
super + h
	~/bin/rofi-key
# application launchers
super + f
    firefox
super + Return
	kitty
 # super + shift + Return
	 # wezterm
super + alt + Return
	pcmanfm
super + e 	
	notepadqq
# Email
super + m
	thunderbird
super + t
	~/bin/time_date
# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'
# quit/restart bspwm
# Restart: super+alt+r
# quit:    super+alt+q
super + alt + r
	bspc wm -r; notify-send 'bspwm' 'Restarted'
super + alt + q
	bspc quit
# close and kill
# Exit: super+q
# Forcefull kill: super + shift + q 
super + {_,shift + }q
	bspc node -{c,k}
# Rotate windows ?
super + i
    bspc node -R 90
super + shift + i
    bspc node -R -90

super + {shift + t,shift + f}
	bspc node -t {tiled,fullscreen}

super + { Left, Down, Up, Right}
	bspc node -f {west,south,north,east}
	
super + shift + { Left, Down, Up, Right}
	bspc node -s {west,south,north,east}

## Change workspace with dunst feedback
 # super + {_,shift + }{1-9,0}
	 # bspc {desktop --focus,node --to-desktop} 'focused:^{1-9,10}' --follow; \
	 # ~/bin/whichws

## Resizing windows
super + ctrl + { Left, Down, Up, Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
super + ctrl + alt + { Left, Down, Up, Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

##  preselect the direction
super + shift + {h,j,k,l}
	bspc node -p {west,south,north,east}
# preselect the ratio
super + shift + {1-9}
	bspc node -o 0.{1-9}
# cancel the preselection for the focused node
super + shift + space
	bspc node -p cancel
# cancel the preselection for the focused desktop
super + shift + alt + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

	
## audio

# Change volume, chunky
super + shift + k
    ~/bin/changevolume up
    
super + shift + j
	~/bin/changevolume down
	
super + shift + m
	~/bin/changevolume mute

#########
# Scrot #
#########
super + alt + @s
	scrot -s -e 'mv $f ~/Pictures'; \
	notify-send 'Scrot' 'Selected image to ~/Pictures'

super + s
	scrot -e 'mv $f ~/Pictures'; \
	notify-send 'Scrot' 'Image saved to ~/Pictures'
	
## redshift
super + alt + r
	~/bin/redshift-on
	
super + alt + b
	~/bin/redshift-off


## Show clipmenu
alt + v
    CM_LAUNCHER=rofi clipmenu 

## Show clipmenu
super+ alt + v
    xfce4-terminal -e ~/bin/ovpn
    
super + @equal
	bspc query -N -d | xargs -I % bspc node % -B
 
